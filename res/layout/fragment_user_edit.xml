<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@id/login_form" android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="false">
        <LinearLayout android:orientation="vertical" android:id="@id/email_login_form" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <EditText android:id="@id/email" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/prompt_email" android:maxLines="1" android:singleLine="true" android:maxLength="50" android:inputType="textEmailAddress" />
            <EditText android:id="@id/user_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="First Name" android:maxLines="1" android:singleLine="true" android:maxLength="50" android:inputType="text" />
            <EditText android:id="@id/user_last_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Last Name" android:maxLines="1" android:singleLine="true" android:maxLength="50" android:inputType="text" />
            <EditText android:id="@id/user_zip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Zip Code" android:maxLines="1" android:singleLine="true" android:maxLength="20" android:inputType="text" android:imeOptions="actionDone" />
            <TextView android:linksClickable="true" android:id="@id/terms" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="16.0dip" />
            <Button android:textStyle="bold" android:textColor="#ffffffff" android:id="@id/email_sign_in_button" android:background="@drawable/red_button_selector" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="16.0dip" android:text="Submit" />
        </LinearLayout>
    </ScrollView>
    <include android:id="@id/progressBar" layout="@layout/progressbar" />
</FrameLayout>